@model List<Product>
@{
    ViewData["Title"] = "index";
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="text-center">
                <h2 class="text-primary">Product List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary text-dark">
                    Product List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg"> Create New Repository</i>
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                       Description
                    </th>
                    <th>
                        ISBN
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        ListPrice
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Price50
                    </th>
                    <th>
                        Price100
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.Title
                        </td>
                        <td>
                            @obj.Description
                        </td>
                        <td>
                            @obj.ISBN
                        </td>
                        <td>
                            @obj.Author
                        </td>
                        <td>
                            @obj.ListPrice
                        </td>
                        <td>
                            @obj.Price
                        </td>
                        <td>
                            @obj.Price50
                        </td>
                        <td>
                            @obj.Price100
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-4">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a>

                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx -4">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




